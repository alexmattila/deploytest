{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "linkedTemplatesBaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.Resources/deployments",
      "name": "versionSetTemplate",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('linkedTemplatesBaseUrl'), 'contosoapim-dev-apiVersionSets.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.Resources/deployments",
      "name": "myAPI-InitialAPITemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'versionSetTemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('linkedTemplatesBaseUrl'), '/myAPI-initial.api.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          }
        }
      }
    },
    {
      "apiVersion": "2021-08-01",
      "type": "Microsoft.Resources/deployments",
      "name": "myAPI-SubsequentAPITemplate",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'myAPI-InitialAPITemplate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('linkedTemplatesBaseUrl'), '/myAPI-subsequent.api.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "apimServiceName": {
            "value": "[parameters('apimServiceName')]"
          }
        }
      }
    }
  ]
}